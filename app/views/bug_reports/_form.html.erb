<%= form_with model: bug_report do |form| %>
   <% if form.object.errors.any? %>
    <div>
        <% form.object.errors.full_messages.each do |message| %>
        <div><%= message %> </div>
        <% end %>
    </div>
    <br/>
   <% end %>
   <div>
        <%= form.label "Type of Bug:" %>
        <br/>
        <%= form.text_field :title%>
    </div>
    <br/>
    <div>
        <%= form.label "Description of Bug:" %>
        <br/>
        <%= form.text_area :summary %>
    </div>
    <br/>
    
    <%= form.button%>
<% end %>